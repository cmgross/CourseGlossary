@model CourseGlossary.Models.Course

@{
    ViewBag.Title = "Create Course";
}

<div class="well">
    @using (Html.BeginForm("Create", "Course", FormMethod.Post, new { id = "createCourse", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Create Course</legend>

            <div class="form-group">
                @Html.LabelFor(model => model.Name)<br />
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @maxlength = "50" })
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @Html.ValidationSummary()
        </fieldset>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
