@model CourseGlossary.Models.Course

@{
    ViewBag.Title = "Edit";
}
<div class="well">
    @using (Html.BeginForm("Edit", "Course", FormMethod.Post, new { id = "editCourse", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Edit Error Category</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Name)<br />
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @maxlength = "50" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            @Html.ValidationSummary()
        </fieldset>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>