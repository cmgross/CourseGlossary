@model CourseGlossary.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="well">
    <fieldset>
        <legend>Search Terms</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.CourseId)<br />
            @Html.DropDownListFor(m => m.CourseId, Model.Courses, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="termSearch">Search Term</label><br />
            <input type="search" name="termSearch" id="termSearch">
        </div>
        <div class="form-group">
            <input type="submit" value="Search" id="btnSearch" class="btn btn-primary" />
        </div>
    </fieldset>
</div>

<div class="well">
    <fieldset>
        <legend>Results</legend>
        <table id="tblResults" class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>Chapter</th>
                    <th>Term</th>
                    <th>Page</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </fieldset>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/HomeIndex")
}