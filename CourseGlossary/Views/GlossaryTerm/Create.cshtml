@model CourseGlossary.Models.GlossaryTermViewModel

@{
    ViewBag.Title = "Create";
}
<div class="well">
    @using (Html.BeginForm("Create", "GlossaryTerm", FormMethod.Post, new { id = "createGlossaryTerm", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Create Term</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.CourseId)<br />
                @Html.DropDownListFor(m => m.CourseId, Model.Courses, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ChapterNumber)<br />
                @Html.DropDownListFor(m => m.ChapterNumber, Model.Chapters, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Term)<br/>
                @Html.TextBoxFor(model => model.Term, new { @class = "form-control", @maxlength = "50" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Page)<br/>
                @Html.EditorFor(model => model.Page)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @Html.ValidationSummary()
        </fieldset>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/GlossaryTermIndex")
}