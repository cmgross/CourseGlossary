@model CourseGlossary.Models.GlossaryTermViewModel
@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="well">
    <fieldset>
        <legend>Chapters</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.CourseId)<br />
            @Html.DropDownListFor(m => m.CourseId, Model.Courses, new { @id = "ddlCourses", @class = "form-control" })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Chapters)<br />
            @Html.DropDownListFor(m => m.Chapters, Model.Chapters, new { @id = "ddlChapters", @class = "form-control" })
        </div>

        <div id="partialPlaceHolder">
            @*@Html.Partial("_Chapters") style="display: none;"*@
        </div>
    </fieldset>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/GlossaryTermIndex")
}